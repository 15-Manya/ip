<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agentsmith.MainWindow"
            prefHeight="600.0" prefWidth="450.0"
            style="-fx-background-image: url('/images/background.png'); -fx-background-size: cover; -fx-background-position: center;">

    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    prefHeight="540.0" prefWidth="450.0"
                    style="-fx-background: transparent; -fx-background-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10.0"
                      style="-fx-background-color: transparent;"
                      fillWidth="true">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <HBox spacing="10.0"
              style="-fx-background-color: rgba(255,255,255,0.9); -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              prefHeight="60.0" prefWidth="450.0"
              alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <TextField fx:id="userInput" HBox.hgrow="ALWAYS"
                           promptText="Type a message..."
                           style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10;"/>
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"
                        style="-fx-background-color: #007AFF; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
