<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agentsmith.MainWindow"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    prefHeight="350.0" prefWidth="600.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="5.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <HBox spacing="10.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              prefHeight="50.0" prefWidth="600.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <TextField fx:id="userInput" HBox.hgrow="ALWAYS"
                           promptText="Enter command here..."/>
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"/>
            </children>
        </HBox>
    </children>
</AnchorPane>

